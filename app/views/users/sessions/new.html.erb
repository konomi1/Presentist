<div class="back-image">
  <div class="top-wrapper">
    <a href="/">
      <img src="/assets/presentist-logo.png" alt="PRESENTIST" class="top-logo">
    </a>
    <h2>Log in</h2>

    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
      <div class="top-wrapper__field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="top-wrapper__field">
        <%= f.label :password, "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="top-wrapper__field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "ログイン情報を記録する" %>
        </div>
      <% end %>

      <div class="top-wrapper__actions">
        <%= f.submit "ログイン" %>
      </div>
    <% end %>

    <p class="top-wrapper__caution">会員登録がお済みでない方は<%= render "users/shared/links" %>をお願いします</p>
  </div>
</div>