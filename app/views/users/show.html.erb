<div class="inner">
  <div class="users-box">
    <% notice %>
    <div class="user-info">
      <p><%= attachment_image_tag @user, :image, :fill, 50, 50, format:'jpeg', fallback:'noimage-user.jpeg', size:'100x100' %></p>
      <div class="user-info__item">
        <h4>Follower</h4>
        <p><%= link_to @user.followers.count, follow_user_path(@user, anchor: "tab1" ) %></p>
      </div>
      <div class="user-info__item">
        <h4>Follow</h4>
        <p><%= link_to @user.followings.count, follow_user_path(@user, anchor: "tab2") %></p>
      </div>
      <div class="user-info__item">
        <h4>お気に入り</h4>
        <p><%= link_to @user.favorites.count, favorites_user_path(@user) %></p>
      </div>
    </div>
    <div class="profile">
      <h2 class="profile__title">Profile</h2>
      <h4 class="profile__sub-title">ニックネーム</h4>
      <p><%= @user.name %></p>
      <h4 class="profile__sub-title">自己紹介</h4>
      <p><%= @user.introduce %></p>
      <% if @user.id == current_user.id %>
        <%= link_to "編集", edit_user_path(current_user) %>
      <% else %>
        <div id="follow_btn_<%= @user.id %>">
          <%= render 'relationships/follow_btn', user: @user %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="user-tab">
    <ul id="tab-menu">
      <li id="tab1"><a href="#panel1">全ての贈り物</a></li>
      <li id="tab2"><a href="#panel2">贈ったもの</a></li>
      <li id="tab3"><a href="#panel3">いただきもの</a></li>
    </ul>

    <div id="tab-panels">
      <div id="panel1" class="panel">
        <h1 class="title">全て</h1>
        <div class="post-wrap">
          <%= render "user_post", presents: @presents %>
        </div>
      </div>
      <div id="panel2" class="panel">
        <h1 class="title">贈り物</h1>
        <div class="post-wrap">
          <%= render "user_post", presents: @to_presents %>
        </div>
      </div>
      <div id="panel3" class="panel">
        <h1 class="title">いただきもの</h1>
        <div class="post-wrap">
          <%= render "user_post", presents: @from_presents %>
        </div>
      </div>
    </div>
  </div>
</div>