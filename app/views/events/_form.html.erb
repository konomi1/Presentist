<%= form_with model: event, local: true do |f| %>
  <div class="form-group">
    <%= f.label :friend_id, "贈り物をする相手" %><br />
    <%= f.collection_select :friend_id, current_user.friends.all, :id, :name, {prompt: "選択してください"}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :date, "記念日" %><br />
    <%= f. date_field :date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :scene_status, "贈り物のシーン" %><br />
    <%= f.select :scene_status, Event.scene_statuses_i18n.keys.map {|k| [I18n.t("enums.event.scene_status.#{k}"), k]}, { prompt: "選択してください" }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :ready_status, "贈り物準備状況" %><br />
    <%= f.radio_button :ready_status, :preparation %>
    <%= f.label :ready_status, "準備中" %>
    <%= f.radio_button :ready_status, :ready %>
    <%= f.label :ready_status, "準備完了" %>
  </div>

  <div class="form-group">
    <%= f.label :memo, "備忘録" %><br />
    <%= f.text_area :memo, placeholder: "贈り物の参考になる情報を記載しよう", class: "form-control" %>
  </div>

  <div class="event__action">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>