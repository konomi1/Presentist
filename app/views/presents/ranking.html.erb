<div class="inner">
  <div class="slide">
    <!--あとで文章追加-->
    <div id="target">
      <div class="slide__image1"></div>
      <div class="slide__image2"></div>
      <div class="slide__image3"></div>
      <div class="slide__image4"></div>
      <div class="slide__image5"></div>
    </div>
  </div>
  <div class="ranking-wrap">
    <p><%= notice %></p>
    <h1 class="title">贈り物ログランキング</h1>
    <% unless user_signed_in? %>
      <p>贈り物の記録をみるには会員登録が必要です。会員登録は<%= link_to "こちら", new_user_registration_path %></p>
    <% end %>
    <%= render "presents/index", presents: @rankings %>
  </div>
  <% if user_signed_in? %>
    <div class="calender-wrap">
      <h1 class="title">贈り物を準備しよう！</h1>
        <div class="schedule">
          <%= month_calendar events: @events do |date,events| %>
            <%= date.day %>
            <% events.each do |event| %>
              <div class="schedule__event">
                <%= link_to event_path(event) do %>
                  <%= event.friend.name %>(<%= event.scene_status_i18n %>)
                <% end %>
              </div>
            <% end %>
          <% end %>
        </div>
    </div>
  <% end %>
</div>