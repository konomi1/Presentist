<% present.comments.each do |comment| %>
  <div class="comment-card">
    <div class="comment-card__user">
      <%= link_to user_path(comment.user) do %>
        <%= attachment_image_tag comment.user, :image, format: "jpeg", fallback: "noimage-user.jpeg", class: "comment-card__image"%>
      <% end %>
    </div>
    <div class=comment-card__other>
      <p class=comment-card__name><%= comment.user.name %>さん</p>
      <p><%= comment.comment %></p>
      <% if comment.user_id == current_user.id %>
        <%= link_to present_comment_path(comment.present_id, comment.id), method: :delete, remote: true, class: "comment-card__delete" do %>
          <i class="far fa-trash-alt"></i>
        <% end %>
      <% end %>
      <p class=comment-card__date><%= comment.created_at.strftime("%Y/%m/%d") %></p>
    </div>
  </div>
<% end %>